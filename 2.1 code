
int led1 = D0;
int led2 = D7;


void setup() {

 
  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);

}


void loop() {
  
  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);

  delay(300);

 
  digitalWrite(led1, LOW);
  digitalWrite(led2, LOW);

 
  delay(1500);

  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);
  delay(300);
  
    digitalWrite(led1, LOW);
    digitalWrite(led2, LOW);
    delay(300);


//break
  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);
  delay(500);
  
  //E
  digitalWrite(led1, LOW);
  digitalWrite(led2, LOW);
  delay(300);
  
    //break
  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);
  delay(500);
  
    //E
  digitalWrite(led1, LOW);
  digitalWrite(led2, LOW);
  delay(300);
 
}
